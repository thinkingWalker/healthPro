<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp">
        <ImageView
            android:id="@+id/recipe_search_result_image"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_exit" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/recipe_search_result_image"
            android:id="@+id/recipe_search_result_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红烧肉"
            android:textColor="@color/wordPrimary"
            android:textSize="20dp" />

        <TextView
            android:layout_marginLeft="20dp"

            android:layout_toRightOf="@+id/recipe_search_result_image"
            android:id="@+id/recipe_search_result_keywords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipe_search_result_name"
            android:layout_marginTop="10dp"
            android:text="关键词：五花肉 放入 洗净 大葱 桂皮"
            android:textColor="@color/wordSecondry"
            android:textSize="14dp" />


    </RelativeLayout>
</LinearLayout>