<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/grid_item_layout"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="90dp">
        <ImageView
            android:layout_marginTop="5dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerHorizontal="true"
            android:id="@+id/grid_item_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
             />
        <TextView

            android:id="@+id/grid_item_message"
            android:layout_marginLeft="-6dp"
            android:layout_alignTop="@+id/grid_item_image"
            android:layout_toRightOf="@+id/grid_item_image"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:text="2"
            android:textSize="10sp"
            android:background="@drawable/feedback_message"
            />
         <TextView
            android:layout_below="@+id/grid_item_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:id="@+id/grid_item_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="营养配餐" />
    </RelativeLayout>


</LinearLayout>