<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="200dp"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/medicine_query_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <RadioButton
            android:checked="true"
            android:id="@+id/medicine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/medicine_query_back_seletor"
            android:button="@null"
            android:gravity="center"
            android:drawableBottom="@drawable/medicine_name"
            android:padding="10dp"
            android:text="药品名称"
            android:textColor="@drawable/medicine_query_word_seletor"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/medicine_country"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/medicine_query_back_seletor"
            android:drawableBottom="@drawable/flg"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="国药准字"
            android:textColor="@drawable/medicine_query_word_seletor"
            android:textSize="20dp" />

        <RadioButton
            android:drawableBottom="@drawable/barcode2"
            android:id="@+id/medicine_qrcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/medicine_query_back_seletor"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="条形码"
            android:textColor="@drawable/medicine_query_word_seletor"
            android:textSize="20dp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">

        <EditText
            android:textColor="@color/wordSecondry"
            android:id="@+id/medicine_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入您的药品名称" />

    </LinearLayout>

    <ImageView
        android:visibility="invisible"
        android:id="@+id/image_qrcode"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/bar_code" />
    <Button
        android:id="@+id/medicine_query_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="120dp"
        android:background="@color/mainColor"
        android:gravity="center"
        android:text="点击查询"
        android:textColor="@color/white"
        android:textSize="20dp" />
</LinearLayout>
