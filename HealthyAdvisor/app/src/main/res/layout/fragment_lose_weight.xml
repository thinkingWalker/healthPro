<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="200dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/knowledge_item_text"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="冬季爱爱有哪些常见问题？"
            android:textColor="@color/wordSecondry"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/knowledge_item_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/knowledge_item_image"
            android:text="12回复"
            android:textColor="@android:color/darker_gray"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/knowledge_item_favourate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/knowledge_item_image"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/knowledge_item_reply"
            android:text="12回复"
            android:textColor="@android:color/darker_gray"
            android:textSize="12dp" />

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/knowledge_item_image"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher" />

    </RelativeLayout>
</LinearLayout>